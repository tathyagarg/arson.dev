datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id      Int    @id @default(autoincrement())
  title   String
  content String // markdown
  tags    Tag[]  @relation("PostTags")

  createdAt DateTime @default(now())
}

model Tag {
  name  String @id
  color String
  posts Post[] @relation("PostTags")
}
