<div class="flex flex-col h-screen w-full">
  <div class="h-[20%] w-full bg-pink-500 grid grid-cols-5 grid-rows-2">
    {{#each this.categories as |category|}}
      <div class="col-span-1 row-span-1 overflow-hidden">
        <button type="button" {{on "click" (fn this.updateSelectedCategory category.name)}} class="w-full">
          <div class="w-full aspect-square rounded-full" style={{concat "background-color: " category.color}}></div>
          {{category.name}}
        </button>
      </div>
    {{/each}}
  </div>
  <div>
    {{#each this.selectedBlocks.blocks as |block|}}
      <Block @data={{block}}/>
    {{/each}}
  </div>
</div>